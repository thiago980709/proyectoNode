{{>header}}
{{>menu}}
<div class="container">
    <form action="./actualizarUsu" method="POST" class="form-horizontal" style="margin:0 auto">
        <div class="form-group">
            <label class="col-lg-4 control-label">Nombres</label>
            <div class="col-lg-4">
                <input type="text" class="form-control" name="nombre" value="{{nombre}}" required />
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-4 control-label">Documento</label>
            <div class="col-lg-4">
                <input type="number" class="form-control" name="documento" value="{{documento}}" required />
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-4 control-label">Correo Electrónico</label>
            <div class="col-lg-4">
                <input type="email" class="form-control" name="email" value="{{email}}" required />
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-4 control-label">Teléfono Celular</label>
            <div class="col-lg-4">
                <input type="number" class="form-control" name="telefono_cel" value="{{telefono_cel}}" required />
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-4 control-label">Tipo</label>
            <div class="col-lg-4">
                <input type="text" class="form-control" name="tipo" value="{{tipo}}" required />
            </div>
        </div>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/actualizarUsu">ACTUALIZAR</a>
                </li>
            </ul>
        </div>


        <div class="form-group">
            <div class="">
                <button type="submit" class="btn btn-success left">Actualizar</button>
            </div>
        </div>

    </form>

</div>
<p>{{err}}</p>


{{>footer}}